<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div> 
      The form contains <%= pluralize(@user.errors.count, "error") %>
    </div>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <%= f.label :username %>
  <%= f.text_field :username %></br>

  <%= f.label :email %>
  <%= f.email_field :email %></br>

  <%= f.label :password %>
  <%= f.password_field :password %></br>

  <%= f.submit %>
<% end %>